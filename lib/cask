#!/bin/bash

run_cask() {
    # Check for Homebrew
    if type_exists 'brew'; then

        # Specify your defaults in this environment variable
        export HOMEBREW_CASK_OPTS="--appdir=/Applications"

        brew tap caskroom/versions

        e_header "Checking status of desired Casks ..."
        local list_casks
        local -a missing_casks
        local -a desired_casks=(
            # daily
            'spectacle'
            'dropbox'
            #'backblaze'
            #'1password' Appstore
            'flux'
            'alfred'
            'caffeine'
            'slack'
            #'little-snitch'
            'Caskroom/cask/xquartz'

            # dev
            'iterm2'
            'sublime-text'
            'atom'
            'webstorm'
            'imagealpha'
            'imageoptim'
            #'virtualbox'
            'sequel-pro'
            'phpstorm'
            'ngrok'

            # fun
            'caprine'
            #'spotify'

            # browsers
            'google-chrome'
            'google-chrome-canary'
            'firefox'
            'firefoxnightly'
            'webkit-nightly'
            #'torbrowser'

            # less often
            #'handbrake'
            #'vlc'
            #'transmit' Appstore
            'gpgtools'
            'reeder'
            'licecap'
            'transmission'

            # QuickLook plugins
            'qlcolorcode'
            'qlstephen'
            'qlmarkdown'
            'quicklook-json'
            'qlprettypatch'
            'quicklook-csv'
            'betterzipql'
            'webpquicklook'
            'suspicious-package'
        )

        for index in ${!desired_casks[*]}
        do
            if ! cask_exists ${desired_casks[$index]}; then
                # Store the name (and options) of every missing formula
                missing_casks=("${missing_casks[@]}" "${desired_casks[$index]}")
            fi
        done

        if [[ "$missing_casks" ]]; then
            # Convert the array of missing formula into a list of space-separate strings
            list_casks=$( printf "%s " "${missing_casks[@]}" )

            e_header "Installing missing Homebrew cask..."

            # Install all missing formulae
            brew cask install $list_casks

            [[ $? ]] && e_success "Done"
        fi
    else
        printf "\n"
        e_error "Error: Homebrew not found."
        printf "Aborting...\n"
        exit
    fi
}
